{
  "name": "forcecode",
  "version": "3.8.3",
  "publisher": "BrettWagner",
  "displayName": "ForceCode",
  "description": "Visual Studio Code extension for Salesforce (SFDC) development",
  "author": {
    "name": "CodeScience"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.25.0"
  },
  "icon": "images/new-logo.png",
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#FF4500",
    "theme": "dark"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/daishi4u/ForceCode.git"
  },
  "activationEvents": [
    "workspaceContains:force.json",
    "onCommand:ForceCode.showMenu"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "views": {
      "fcView": [
        {
          "id": "ForceCode.codeCovDataProvider",
          "name": "Code Coverage",
          "when": "ForceCodeActive"
        },
        {
          "id": "ForceCode.switchUserProvider",
          "name": "Saved Usernames",
          "when": "ForceCodeActive"
        },
        {
          "id": "ForceCode.treeDataProvider",
          "name": "Running Tasks",
          "when": "ForceCodeActive"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fcView",
          "icon": "./images/logo.svg",
          "title": "ForceCode"
        }
      ]
    },
    "commands": [
      {
        "command": "ForceCode.showMenu",
        "title": "ForceCode: ForceCode Menu"
      },
      {
        "command": "ForceCode.openOrg",
        "title": "ForceCode: Open Org In Browser"
      },
      {
        "command": "ForceCode.compile",
        "title": "ForceCode: Save/Deploy/Compile"
      },
      {
        "command": "ForceCode.refresh",
        "title": "ForceCode: Refresh from server"
      },
      {
        "command": "ForceCode.executeAnonymous",
        "title": "ForceCode: Execute Anonymous"
      },
      {
        "command": "ForceCode.open",
        "title": "ForceCode: Get Class, Page, or Trigger"
      },
      {
        "command": "ForceCode.staticResource",
        "title": "ForceCode: Bundle / Deploy Static Resource"
      },
      {
        "command": "ForceCode.openFileInOrg",
        "title": "ForceCode: Open this file in the Org"
      },
      {
        "command": "ForceCode.toggleCoverage",
        "title": "ForceCode: Toggle Test Coverage",
        "icon": {
          "light": "./images/coverage.svg",
          "dark": "./images/coverage.svg"
        }
      },
      {
        "command": "ForceCode.previewVF",
        "title": "ForceCode: Preview Visualforce page",
        "icon": {
          "light": "./images/logo.svg",
          "dark": "./images/logo.svg"
        }
      },
      {
        "command": "ForceCode.previewApp",
        "title": "ForceCode: Preview Lightning App",
        "icon": {
          "light": "./images/logo.svg",
          "dark": "./images/logo.svg"
        }
      },
      {
        "command": "ForceCode.diff",
        "title": "ForceCode: Diff Local <> Remote"
      }
    ],
    "keybindings": [
      {
        "command": "ForceCode.showMenu",
        "key": "alt+cmd+c",
        "win": "ctrl+shift+c",
        "when": "editorFocus"
      },
      {
        "command": "ForceCode.compile",
        "key": "alt+cmd+s",
        "win": "ctrl+shift+s",
        "when": "editorFocus && ForceCodeActive"
      },
      {
        "command": "ForceCode.executeAnonymous",
        "key": "alt+cmd+e",
        "win": "ctrl+shift+e",
        "when": "editorFocus && resourceLangId == apex && ForceCodeActive && editorHasSelection"
      },
      {
        "command": "ForceCode.open",
        "key": "alt+cmd+o",
        "win": "ctrl:shift+o",
        "when": "ForceCodeActive"
      },
      {
        "command": "ForceCode.staticResource",
        "key": "alt+cmd+b",
        "win": "ctrl+shift+b",
        "when": "ForceCodeActive"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ForceCode configuration",
      "properties": {
        "force.filesExclude": {
          "type": "object",
          "default": {
            ".gitignore": true,
            ".DS_Store": true,
            ".org_metadata": true,
            "**/*.map": true,
            "node_modules/**": true,
            "bower_modules/**": true,
            "**.tmp": true,
            "**/*-meta.xml": true,
            ".log": true
          },
          "description": "An object describing the files to exclude from the Static Resource build. The key is a Nodejs \"Glob\" pattern, the value is true or false"
        }
      }
    },
    "languages": [
      {
        "id": "apex",
        "extensions": [
          ".apex",
          ".cls",
          ".trigger",
          ".tgr"
        ],
        "aliases": [
          "Apex"
        ]
      },
      {
        "id": "visualforce",
        "extensions": [
          ".component",
          ".page"
        ],
        "aliases": [
          "Visualforce"
        ]
      },
      {
        "id": "staticResource",
        "extensions": [
          ".resource"
        ]
      },
      {
        "id": "apex",
        "aliases": [
          "Apex"
        ],
        "extensions": [
          ".apex"
        ]
      },
      {
        "id": "apexCodeCoverage",
        "extensions": [
          ".acov"
        ]
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == apex && ForceCodeActive",
          "command": "ForceCode.toggleCoverage",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .page && ForceCodeActive",
          "command": "ForceCode.previewVF",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .app && ForceCodeActive",
          "command": "ForceCode.previewApp",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "ForceCodeActive",
          "command": "ForceCode.openOrg",
          "group": "ForceCode"
        },
        {
          "when": "ForceCodeActive",
          "command": "ForceCode.compile",
          "group": "ForceCode"
        },
        {
          "when": "ForceCodeActive",
          "command": "ForceCode.refresh",
          "group": "ForceCode"
        },
        {
          "when": "resourceExtname == .page && ForceCodeActive",
          "command": "ForceCode.previewVF",
          "group": "ForceCode"
        },
        {
          "when": "resourceExtname == .app && ForceCodeActive",
          "command": "ForceCode.previewApp",
          "group": "ForceCode"
        },
        {
          "when": "resourceLangId == apex && ForceCodeActive",
          "command": "ForceCode.toggleCoverage",
          "group": "ForceCode"
        },
        {
          "when": "resourceLangId == visualforce && ForceCodeActive",
          "command": "ForceCode.openFileInOrg",
          "group": "ForceCode"
        },
        {
          "when": "resourceLangId == apex && ForceCodeActive",
          "command": "ForceCode.openFileInOrg",
          "group": "ForceCode"
        },
        {
          "when": "resourceLangId == apex && editorHasSelection && ForceCodeActive",
          "command": "ForceCode.executeAnonymous",
          "group": "ForceCode"
        },
        {
          "when": "resourceLangId == visualforce && ForceCodeActive",
          "command": "ForceCode.diff",
          "group": "ForceCode"
        },
        {
          "when": "resourceLangId == apex && ForceCodeActive",
          "command": "ForceCode.diff",
          "group": "ForceCode"
        }
      ],
      "explorer/context": [
        {
          "when": "ForceCodeActive",
          "command": "ForceCode.refresh",
          "group": "ForceCode"
        },
        {
          "when": "ForceCodeActive && !explorerResourceIsFolder",
          "command": "ForceCode.compile",
          "group": "ForceCode"
        }
      ],
      "commandPalette": [
        {
          "command": "ForceCode.showMenu"
        },
        {
          "command": "ForceCode.compile",
          "when": "ForceCodeActive"
        },
        {
          "command": "ForceCode.refresh",
          "when": "ForceCodeActive"
        },
        {
          "command": "ForceCode.executeAnonymous",
          "when": "ForceCodeActive"
        },
        {
          "command": "ForceCode.open",
          "when": "ForceCodeActive"
        },
        {
          "command": "ForceCode.staticResource",
          "when": "ForceCodeActive"
        },
        {
          "command": "ForceCode.toggleCoverage",
          "when": "ForceCodeActive && resourceLangId == apex"
        },
        {
          "command": "ForceCode.diff",
          "when": "ForceCodeActive && (resourceLangId == apex || resourceLangId == visualforce)"
        },
        {
          "command": "ForceCode.openOrg",
          "when": "ForceCodeActive"
        }
      ]
    }
  },
  "scripts": {
    "bump": "npm version patch && git push && git push --tags && vsce package",
    "rebuild": "electron-rebuild -n 49 -v 1.3.8",
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "clean": "rimraf ./out/ && rimraf ./node_modules/",
    "test": "node ./node_modules/vscode/bin/test",
    "tslint": "tslint -c tslint.json src/**/*.ts",
    "package": "vsce package"
  },
  "dependencies": {
    "archiver": "^3.0.0",
    "crypto-browserify": "3.12.0",
    "fs-extra": "^7.0.0",
    "globule": "^1.2.1",
    "jsforce": "1.8.5",
    "jszip": "^3.1.5",
    "klaw": "^3.0.0",
    "mime-types": "^2.1.20",
    "moment": "^2.22.2",
    "node-fetch": "^2.2.0",
    "os": "^0.1.1",
    "request-light": "^0.2.3",
    "salesforce-alm": "^43.12.0",
    "util.promisify": "^1.0.0",
    "vscode": "^1.1.21",
    "xml2js": "^0.4.19",
    "zip": "^1.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/glob": "^5.0.35",
    "@types/mocha": "^5.2.5",
    "@types/node": "10.9.4",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^5.0.2",
    "chai": "^4.1.2",
    "cross-env": "5.2.0",
    "decache": "^4.4.0",
    "electron-rebuild": "^1.8.2",
    "glob": "^7.1.3",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-multi-reporters": "^1.1.7",
    "mock-spawn": "0.2.6",
    "nyc": "^13.0.1",
    "remap-istanbul": "^0.11.1",
    "rimraf": "^2.6.2",
    "sinon": "^6.1.5",
    "source-map-support": "^0.5.9",
    "typescript": "^3.0.3",
    "vsce": "^1.47.0"
  }
}
